{
  "name": "AcademicQuest",
  "version": "1.0.0",
  "description": "AcademicQuest Desktop - Transform your academic journey into an epic adventure",
  "main": "src/main.js",
  "homepage": "./",
  "author": {
    "name": "RenKaiStudios",
    "email": "RenKai.Studios0@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "dev:full": "node dev.js --web",
    "start": "electron .",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "cd ../web && npm run build",
    "build:electron": "electron-builder",
    "build:win": "npm run build:web && electron-builder --win",
    "build:mac": "npm run build:web && electron-builder --mac",
    "build:linux": "npm run build:web && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.academicquest.desktop",
    "productName": "AcademicQuest",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "../web/dist",
        "to": "web",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/AcademicQuest-Icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/AcademicQuest-Icon.png",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/AcademicQuest-Icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "AcademicQuest Installer",
      "icon": "build/icon.icns"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.4",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3"
  }
}
